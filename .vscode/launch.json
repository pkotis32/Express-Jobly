{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Server",
        "program": "${workspaceFolder}/server.js",
        "restart": true,
        "console": "integratedTerminal"
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Jest Tests",
        "program": "${workspaceFolder}/node_modules/.bin/jest",
        "args": [
          "--runInBand"
        ],
        "autoAttachChildProcesses": true,
        "restart": true,
        "console": "integratedTerminal"
      }
    ]
  }